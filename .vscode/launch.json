{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "example-1",
            "initCommands": [
                "platform select remote-linux", // For example: 'remote-linux', 'remote-macosx', 'remote-android', etc.
                "platform connect connect://localhost:8081",
                "settings set target.inherit-env true", // See note below.
            ],
            "cargo": {
                "args": [
                    "build",
                    "--bin=shttpd",
                    "--package=shttpd"
                ],
                "filter": {
                    "name": "shttpd",
                    "kind": "bin"
                }
            },
            "args": ["-c", "examples/example-1/Shttpd.toml"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "trace"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'shttpd'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=shttpd",
                    "--package=shttpd"
                ],
                "filter": {
                    "name": "shttpd",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
